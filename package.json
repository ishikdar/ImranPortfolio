{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "Portfolio website with TypeScript backend and HTML/CSS frontend",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc --project tsconfig.server.json && tsc --project tsconfig.site.json",
    "dev": "ts-node --esm src/server.ts",
    "start": "node dist/server.js",
    "watch": "tsc --watch"
  },
  "keywords": ["portfolio", "typescript", "express", "web"],
  "author": "Md Al Imran Shikdar",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
